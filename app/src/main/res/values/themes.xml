<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Da" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0040FF</item>
        <item name="colorPrimaryVariant">#0040FF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/balance_fon</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#FF0040FF</item>
        <item name="colorSwitchThumbNormal">#CACACA</item>
        <item name="android:colorForeground">#1BC871FA</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">#63F0F0F0</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TextColorCard">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Arrow">
        <item name="android:src">@drawable/ic_chevron</item>
    </style>

    <style name="ArrowAddCategory">
        <item name="android:src">@drawable/ic_chevron</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="BackgroundActiveDay">
        <item name="android:background">@drawable/day_month_selector</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BackgroundSettings">
        <item name="android:background">@drawable/fon_setting</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Da" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>




    <style name="TextInputEditText">
        <item name="android:textColor">#090808</item>
        <item name="android:textColorHighlight">#000000</item>
        <item name="android:textColorHint">#C4CCCC</item>
        <item name = "android:backgroundTint">#ACACAC</item>
        <item name = "android:drawableTint">#000</item>
    </style>
</resources>