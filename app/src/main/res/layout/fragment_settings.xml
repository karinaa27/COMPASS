<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.SettingsFragment"
    style="@style/ScreenBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_centerInParent="true"
            style="@style/TextColor"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textSize="20sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/user_icon"/>

            <TextView
                android:id="@+id/textUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/user_name_settings"
                style="@style/TextColor"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/textUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/email_settings"
                style="@style/TextColor"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                style="@style/BackgroundSettings"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/nightModeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/day_and_night_te1mi9pn0x20"
                        android:background="@drawable/icon_settings_fon"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/textNightMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/night_mode"
                        style="@style/TextColor"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/nightModeIcon"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNightMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:theme="@style/nightModeSwitch"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/Notifications"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_notifications_black_24dp"
                        android:background="@drawable/icon_settings_fon"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/textNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/notifications"
                        style="@style/TextColor"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/Notifications"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:minWidth="50dp"
                        android:theme="@style/nightModeSwitch"/>
                </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            style="@style/BackgroundSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/language"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/language_icon"
                    android:background="@drawable/icon_settings_fon"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/textLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                   style="@style/TextColor"
                    android:text="@string/language"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/language"/>

                <Spinner
                    android:id="@+id/languageSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/CategoriesSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/category"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/categories_ic"
                    android:background="@drawable/icon_settings_fon"
                    android:padding="12dp"/>

                <TextView
                    android:id="@+id/textCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    style="@style/TextColor"
                    android:text="Categories"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:layout_toEndOf="@id/category"/>
                <ImageView
                    android:id="@+id/arrowCategories"
                    style="@style/Arrow"
                    android:rotation="180"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
