<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <ImageView
            android:id="@+id/addCategoryIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            style="@style/AddCategory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            android:contentDescription="@string/button_add_category"
            />

    <TextView
        android:id="@+id/addCategoryText"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/button_add_category"
        android:textAlignment="center"
        style="@style/TextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addCategoryIcon"
        app:layout_constraintStart_toStartOf="@+id/addCategoryIcon"
        app:layout_constraintTop_toBottomOf="@+id/addCategoryIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>